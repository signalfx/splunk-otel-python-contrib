# =============================================================================
# CrewAI Financial Assistant - Environment Variables
# =============================================================================

# =============================================================================
# Instrumentation Mode
# =============================================================================

# Set to "true" for manual instrumentation (default)
# Set to "false" for zero-code instrumentation (use with opentelemetry-instrument)
OTEL_MANUAL_INSTRUMENTATION=true

# =============================================================================
# LLM Configuration - Choose ONE option:
# =============================================================================

# Option 1: OpenAI API (direct)
# OPENAI_API_KEY=your-openai-api-key-here

# Option 2: OAuth2 LLM Provider (via LiteLLM)
LLM_CLIENT_ID=your-client-id
LLM_CLIENT_SECRET=your-client-secret
LLM_TOKEN_URL=https://your-identity-provider/oauth2/token
LLM_BASE_URL=https://your-llm-gateway/openai/deployments
LLM_APP_KEY=your-app-key

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================

# Service name for telemetry
OTEL_SERVICE_NAME=financial-trading-crew

# OTLP Exporter - Local collector (gRPC)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Console output for local debugging (set to "true" to enable)
OTEL_CONSOLE_OUTPUT=false

# Explicit exporter configuration
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Metrics temporality (required for Splunk)
OTEL_EXPORTER_OTLP_METRICS_TEMPORALITY_PREFERENCE=DELTA

# =============================================================================
# GenAI Instrumentation Configuration
# =============================================================================

# Emitters: span_metric enables both spans and metrics
OTEL_INSTRUMENTATION_GENAI_EMITTERS=span_metric

# Capture message content in spans (may contain sensitive data)
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=true
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT_MODE=SPAN_AND_EVENT

# Evaluation settings
OTEL_INSTRUMENTATION_GENAI_EVALS_RESULTS_AGGREGATION=true
OTEL_INSTRUMENTATION_GENAI_EMITTERS_EVALUATION=replace-category:SplunkEvaluationResults

# =============================================================================
# CrewAI Configuration
# =============================================================================

# Disable CrewAI built-in telemetry (recommended when using OTel)
CREWAI_DISABLE_TELEMETRY=true

# OpenAI Model (used by CrewAI/LiteLLM)
OPENAI_MODEL_NAME=gpt-4o-mini

# =============================================================================
# Tools Configuration (optional)
# =============================================================================

# Serper API Key for web search tool
# SERPER_API_KEY=your-serper-api-key

# =============================================================================
# Python Logging
# =============================================================================

# Enable Python logging auto instrumentation
OTEL_PYTHON_LOGGING_AUTO_INSTRUMENTATION_ENABLED=true

# Enable log correlation with traces
OTEL_PYTHON_LOG_CORRELATION=true

