# Travel Assistant Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# OpenAI API
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4o-mini

# =============================================================================
# Embeddings (Azure OpenAI - required for Part 1: Semantic Search)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# =============================================================================
# Observability
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Emitters: span (default), span_metric_event (full telemetry), splunk (Splunk-specific)
OTEL_INSTRUMENTATION_GENAI_EMITTERS=span_metric_event

# Content Capture
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=true
OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT_MODE=SPAN_AND_EVENT

# =============================================================================
# Evaluations (Optional - requires deepeval)
# =============================================================================
# OTEL_INSTRUMENTATION_GENAI_EVALS_EVALUATORS=deepeval(LLMInvocation(bias,toxicity))
# DEEPEVAL_LLM_MODEL=gpt-4o-mini
# DEEPEVAL_FILE_SYSTEM=READ_ONLY
