# Travel Assistant Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Option 1: Circuit (Internal LLM Gateway)
# =============================================================================
LLM_CLIENT_ID=your-client-id
LLM_CLIENT_SECRET=your-client-secret
LLM_APP_KEY=your-app-key

# =============================================================================
# Option 2: OpenAI API Directly
# =============================================================================
USE_OPENAI_DIRECT=false
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Common Settings
# =============================================================================
LLM_MODEL=gpt-4o-mini

# =============================================================================
# Embeddings (Azure OpenAI - required for Part 1)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# =============================================================================
# Observability
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
